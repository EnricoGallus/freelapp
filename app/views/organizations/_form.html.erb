<%= form_with(model: organization, local: true) do |form| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if organization.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', organization, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if organization.persisted? %>
      <%= link_to "Cancel", organization, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", organizations_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
