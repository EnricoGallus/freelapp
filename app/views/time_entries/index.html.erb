<div class="row">
  <div class="col-sm-6">
    <h1>Time_entries</h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to new_time_entry_path, class: 'btn btn-primary' do %>
      Add New Time entry
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>From</th>
      <th>To</th>
      <th>Date</th>
    </tr>
    </thead>

    <tbody>
    <% @time_entries.each do |time_entry| %>
      <%= content_tag :tr, id: dom_id(time_entry), class: dom_class(time_entry) do %>
        <td><%= link_to time_entry.name, time_entry %></td>
        <td><%= link_to time_entry.project.name, time_entry.project %></td>
        <td><%= time_entry.from.strftime('%H:%M') %></td>
        <td><%= time_entry.to.strftime('%H:%M') %></td>
        <td><%= time_entry.date %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
